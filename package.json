{
  "name": "ERC1400",
  "version": "0.1.0-dev",
  "description": "Codefi Asset's ERC1400 implementation",
  "files": [
    "contracts",
    "tests"
  ],
  "scripts": {
    "build": "yarn run clean && truffle compile && yarn run generate-types",
    "clean": "del-cli --force ./build && del-cli --force ./types",
    "coverage": "yarn truffle run coverage --network coverage",
    "env": "cp ./.env.example ./.env && echo .env file generated, please update to continue",
    "lint": "eslint ./migrations ./test ",
    "lint:fix": "eslint ./test ./migrations --fix",
    "lint:sol": "yarn solhint contracts/**/*.sol",
    "lint:sol:fix": "yarn solhint contracts/**/*.sol --fix",
    "lint:all": "yarn run lint && yarn run lint:sol",
    "lint:all:fix": "yarn run lint:fix && yarn run lint:sol:fix",
    "console": "truffle console",
    "start:chain": "ganache",
    "test": "yarn truffle test",
    "generate-types": "typechain --target=truffle-v5 'build/contracts/*.json'",
    "postinstall": "yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ConsenSys/UniversalToken"
  },
  "keywords": [
    "boilerplate",
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "security",
    "ERC1820",
    "ERC20",
    "ERC721",
    "ERC1155",
    "extensions",
    "plugins",
    "token",
    "proxy",
    "ERC777",
    "ERC1410",
    "ERC1400"
  ],
  "author": "Edward Penta <ecp4224@gmail.com>",
  "contributors": [
    "Gauthier Petetin <gauthierpetetin@hotmail.com>",
    "Julien Marchand <julien.marchand4@gmail.com>",
    "Julien Tanay <julien.tanay@gmail.com>"
  ],
  "license": "Apache",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@openzeppelin/test-helpers": "^0.5.6",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/truffle-v5": "^6.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.23.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "del-cli": "^4.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-truffle": "^0.3.1",
    "eth-lib": "^0.1.29",
    "ethereumjs-testrpc-sc": "6.1.6",
    "ethereumjs-util": "^5.1.2",
    "fs-extra": "^7.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "sol-merger": "0.1.4",
    "solhint": "^3.3.7",
    "solidity-coverage": "0.8.0-beta.0",
    "solium": "^1.2.5",
    "truffle-contract-size": "^2.0.1",
